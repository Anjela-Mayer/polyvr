      <core>
	import VR
	import math
	import random

	m = ka.getMaterial()
	
	d = 1.0
	a = 0.8
	m.setDiffuse(d,d,d)
	m.setAmbient(a,a,a)
	
	if not hasattr(VR, 'fan'):
		VR.fan = VR.Geometry('fan')
		ka.addChild(VR.fan)
		print 'init'
		
	N = 64
	pos = []
	pos.append([0,0,-200])
	inds = []
	cols = []
	cols.append([1, 0.5, 0.5])
	for i in range(N):
		a1 = i*2*math.pi/N
		a2 = a1 + 0.1 + random.random()
		
		ca1 = math.cos(a1)
		sa1 = math.sin(a1)
		ca2 = math.cos(a2)
		sa2 = math.sin(a2)
		
		r = 3 + 4*random.random()
		z1 = 1-2*random.random()
		z2 = 1-2*random.random()
		
		pos.append([1.5+r*1.5*ca1, r*sa1-0.5, z1])
		pos.append([1.5+r*1.5*ca2, r*sa2-0.5, z2])
		
		c1 = random.random()
		c2 = random.random()
		cols.append([c1, 1-c1*c2, c2])
		cols.append([c1, 1-c1*c2, c2])
		
		inds.append(0)
		inds.append(i*2+1)
		inds.append(i*2+2)
		
	norms = [[0,0,1]]*len(pos)
		
	fm = VR.Material('fan')
	fm.setLit(False)
	fm.setDiffuse(1,1,1)
	fm.setAmbient(1,1,1)
	fm.setSpecular(1,1,1)
	
	VR.fan.setNormals(norms)
	VR.fan.setPositions(pos)
	VR.fan.setIndices(inds)
	VR.fan.setColors(cols)
	#VR.fan.setRandomColors()
	VR.fan.setType('GL_TRIANGLES')
	VR.fan.setMaterial(fm)
	
	
	
	
