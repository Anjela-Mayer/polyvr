unameOut="$(uname -s)"
echo "uname result: " ${unameOut}

case "${unameOut}" in
    Linux*)     machine=Linux;;
    Darwin*)    machine=Mac;;
    CYGWIN*)    machine=Cygwin;;
    MINGW*)     machine=MinGw;;
    *)          machine="UNKNOWN:${unameOut}"
esac
echo "detected OS: " ${machine}

if [ "$machine" = "Linux" ]; then
	killall VRServer
fi

if [ "$machine" = "Cygwin" ]; then
        taskkill -F -IM VRServer.exe
fi

if [ "$machine" = "MinGw" ]; then
        taskkill -F -IM VRServer.exe
fi
